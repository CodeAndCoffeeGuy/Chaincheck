# ChainCheck Environment Variables
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# Private key for deploying contracts
# WARNING: Never share your private key or commit it to git!
# Get this from MetaMask: Account Details > Export Private Key
PRIVATE_KEY=your_private_key_here

# RPC URLs for blockchain networks
# Mumbai Testnet (for testing)
MUMBAI_RPC_URL=https://rpc-mumbai.maticvigil.com

# Polygon Mainnet (for production)
POLYGON_RPC_URL=https://polygon-rpc.com

# PolygonScan API Key (optional, for contract verification)
# Get your API key from: https://polygonscan.com/myapikey
POLYGONSCAN_API_KEY=your_polygonscan_api_key_here

# Contract Address (optional, will be set after deployment)
CONTRACT_ADDRESS=
